@model Tuple<TestimonialPage,SahtakTestimonial>

@{
    ViewData["Title"] = "Testimonial";
}
<!-- Breadcrumbs -->
<div class="breadcrumbs overlay">
	<div class="container">
		<div class="bread-inner">
			<div class="row">
				<div class="col-12">
					<h2>@Html.DisplayFor(model => model.Item1.Title)</h2>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Start Appointment -->
<section class="appointment">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>@Html.DisplayFor(model => model.Item1.Header) </h2>
					<img src="~/Website Template/img/section-img.png" alt="#">
					<p>
						@Html.DisplayFor(model => model.Item1.Paragraph)
					</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 col-md-12 col-12">
				<form class="form" method="post" asp-action="Testimonial">
					<div class="row">
						<div class="col-lg-12 col-md-12 col-12">
							<div class="form-group">
								<textarea name="Text"placeholder="Write Your Feedback Here....."required></textarea>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-5 col-md-4 col-12">
							<div class="form-group">
								<div class="button">
									<button type="submit" class="btn">Send</button>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div class="col-lg-6 col-md-12 ">
				<div class="appointment-image">
					<img src="~/Website Template/img/contact-img.png" alt="#">
				</div>
			</div>
		</div>
	</div>
</section>
<!-- End Appointment -->