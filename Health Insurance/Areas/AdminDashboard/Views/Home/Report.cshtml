@model IEnumerable<ReportJoinTable>
@{
    ViewData["Title"] = "Report";
}
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
<br />
<br />
<h1>Report</h1>
<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="table-responsive">
            <form asp-action="Report">
                <div class="container">
                    <input type="date"class="" name="DateFrom" placeholder="Start Date" />
                    <input type="date" class="" name="DateTo" placeholder="End Date" />
                    <button class="btn btn-outline-primary"type="submit">Search</button>
                </div>
            </form>
            <table id="Example1" class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr>
                        <th scope="col">
                            First Name
                        </th>
                        <th scope="col">
                            Last Name
                        </th>
                        <th scope="col">
                            Email
                        </th>
                        <th scope="col">
                            Phone Number
                        </th>
                        <th scope="col">
                            Subscription Name
                        </th>
                        <th scope="col">
                            Subscription Price
                        </th>
                        <th scope="col">
                            Subscription Period
                        </th>
                        <th scope="col">
                            User Subscription From
                        </th>
                        <th scope="col">
                            User Subscription To
                        </th>
                        <th scope="col">
                            User Payment Date
                        </th>
                        <th scope="col">
                            Bank Balance
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.subs.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.subs.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.subs.Period)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.subscribe.DateFrom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.subscribe.DateTo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pay.PaymentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pay.Amount)
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td>Total Payment</td>
                        <td>@ViewData["TotalPay"]</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $("#Example1").DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>